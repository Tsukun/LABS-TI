#include <String>
int prover(char ch[])
{
	int k, max, min, zn(0);
	char s1[255], s2[255];
	k = strlen(ch);
	max = pow(2, sizeof(int) * 8 - 1) - 1;
	min = -1 * pow(2, sizeof(int) * 8 - 1);
	sprintf(s1, "%d", max);
	sprintf(s2, "%d", min);
	if (ch[0] == '-') return 0;
	for (int i = zn; i < strlen(ch); i++) if (ch[i]<'0' || ch[i]>'9') return 0;
	if (strlen(ch) < strlen(s1)) return 1;
	if (strlen(ch) > strlen(s1)) return 0;
}

int Vvod_and_Proverka() // ввод и проверка числа 
{
	char ch[255];
	while (1)
	{
		scanf("%s", ch);
		if (prover(ch) == 1) break;
		printf("Ошибка   \nВведите число ещё раз:");
	}
	return atoi(ch);
}
